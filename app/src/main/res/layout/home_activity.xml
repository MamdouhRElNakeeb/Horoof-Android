<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_default"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".view.Home">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:adjustViewBounds="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="55dp"
            android:layout_marginStart="30dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="-30dp"
            android:orientation="vertical">

        <Button
                android:id="@+id/newCompBtn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:background="@drawable/btn_new_comp"/>
        <Button
                android:alpha="0.5"
                android:enabled="false"
                android:id="@+id/openCompBtn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:background="@drawable/btn_open_comp"/>
        <Button
                android:id="@+id/bestResultsBtn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:background="@drawable/btn_best_results"/>
        <Button
                android:id="@+id/settingsBtn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:background="@drawable/btn_settings"/>
        <Button
                android:id="@+id/helpBtn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:background="@drawable/btn_help"/>

    </LinearLayout>


</LinearLayout>