<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_default"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".view.Home">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:adjustViewBounds="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="55dp"
            android:layout_marginLeft="30dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="-30dp"
            android:orientation="vertical">

        <agency.crete.horoof.view.custom.Button
                android:id="@+id/newCompBtn"
                android:text="@string/new_comp"
                android:typeface="monospace"
                android:textSize="23sp"
                android:textColor="@android:color/white"
                app:outlineColor="@color/colorPrimaryDark"
                app:outlineWidth="5dp"
                android:gravity="top|center"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:background="@drawable/btn_default"/>

        <agency.crete.horoof.view.custom.Button
                android:alpha="0.5"
                android:enabled="false"
                android:id="@+id/openCompBtn"
                android:text="@string/open_comp"
                android:typeface="monospace"
                android:textSize="23sp"
                android:textColor="@android:color/white"
                app:outlineColor="@color/colorPrimaryDark"
                app:outlineWidth="5dp"
                android:gravity="top|center"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:background="@drawable/btn_default"/>

        <agency.crete.horoof.view.custom.Button
                android:id="@+id/bestResultsBtn"
                android:text="@string/best_results"
                android:typeface="monospace"
                android:textSize="23sp"
                android:textColor="@android:color/white"
                app:outlineColor="@color/colorPrimaryDark"
                app:outlineWidth="5dp"
                android:gravity="top|center"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:background="@drawable/btn_default"/>

        <agency.crete.horoof.view.custom.Button
                android:id="@+id/settingsBtn"
                android:text="@string/settings"
                android:typeface="monospace"
                android:textSize="23sp"
                android:textColor="@android:color/white"
                app:outlineColor="@color/colorPrimaryDark"
                app:outlineWidth="5dp"
                android:gravity="top|center"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:background="@drawable/btn_default"/>

        <agency.crete.horoof.view.custom.Button
                android:id="@+id/helpBtn"
                android:text="@string/help"
                android:typeface="monospace"
                android:textSize="23sp"
                android:textColor="@android:color/white"
                app:outlineColor="@color/colorPrimaryDark"
                app:outlineWidth="5dp"
                android:gravity="top|center"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:background="@drawable/btn_default"/>


    </LinearLayout>


</LinearLayout>