<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_height="50dp"
		android:layout_width="match_parent"
		android:background="@drawable/table_item_bg"
		android:orientation="vertical">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

		<RelativeLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:padding="5dp"
				android:layout_height="wrap_content">

			<ImageView
					android:id="@+id/indexBgIV"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>

			<agency.crete.horoof.view.custom.TextView
					android:id="@+id/indexTV"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="center"
					android:typeface="monospace"
					android:text="1"
					android:textSize="17sp"
					android:textColor="@android:color/white"
					app:outlineColor="@color/colorPrimaryDark"
					app:outlineWidth="4dp"/>
		</RelativeLayout>


		<View
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:background="#720600"/>

		<agency.crete.horoof.view.custom.TextView
				android:id="@+id/scoreTV"
				android:layout_width="0dp"
				android:layout_weight="2"
				android:layout_height="match_parent"
				android:gravity="center"
				android:typeface="monospace"
				android:textSize="18sp"
				android:textColor="@android:color/white"
				app:outlineColor="@color/colorPrimaryDark"
				app:outlineWidth="4dp"/>

		<View
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:background="#720600"/>


		<TextView
				android:id="@+id/nameTV"
				android:layout_width="0dp"
				android:layout_weight="2"
				android:gravity="center"
				android:typeface="monospace"
				android:textColor="@color/colorPrimary"
				android:layout_height="match_parent"/>

	</LinearLayout>


	<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_alignParentBottom="true"
			android:background="#720600"/>

</RelativeLayout>